<!DOCTYPE html>
<html data-theme="pastel" lang="en">
<!-- <html data-theme="pastel" lang="en"></html> -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit set</title>
    <link rel="stylesheet" href="/css/main.css" />
    <!-- <link rel="stylesheet" href="../css/main.css" />  -->
    
</head>
<body>
    <!-- empty page as per instruction -->
    <%- include('partials/navbar', {page: ''}) %>
    <span class="hero text-2xl">EDIT <%= set.name %></span> 
    <br><br>
    <div class="container mx-auto border-2  shadow-md shadow-violet-700 rounded-lg place-items-center"> 
        <form method="post" action="/lego/editSet">
            <br>
            <!-- without labels, the input becomes null!!! be warned for next time -->
            <label for="name" class="px-7">Name: </label>
            <input type="text" name="name" id="name" value="<%= set.name %>" class="input input-bordered input-xs w-full max-w-xs px-7" required />
            <br><br>
            
            <label for="year" class="px-7">Year: </label>
            <input type="number" name="year"  id="year" value="<%= set.year %>" class="input input-bordered input-xs w-full max-w-xs px-7" required/>
            <br><br>
            
            <label for="num_parts" class="px-7">Amount of parts: </label>
            <input type="number" name="num_parts" id="num_parts" value="<%= set.num_parts %>"  class="input input-bordered input-xs w-full max-w-xs px-7" required/>
            <br><br>
            
            <label for="img_url" class="px-7">Image Url: </label>
            <input type="url" name="img_url" id="img_url" value="<%= set.img_url %>"  class="input input-bordered input-xs w-full max-w-xs px-7" required/>
            <br><br>

            <label for="theme_id" class="px-7">Theme:  </label>
            <select name="theme_id" id="theme_id" value="<%= set.theme_id %>"  class=" border-2 border-neutral  rounded-lg px-7" required>
                <option value="">** Please choose from the following themes **</option>
                <% themes.forEach(theme=>{ %>
                    <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                      <%= theme.name %>
                    </option>
                  <% }) %>
                  
            </select>
            <br><br>

            
            <label for="set_num" class="px-7">Set Number: </label>
            <!-- read only value! -->
            <input type="text" name="set_num" id="set_num" value="<%= set.set_num %>" class="cursor-not-allowed input input-bordered input-xs w-full max-w-xs px-7" required/>
            <br><br>

            <button class="btn bg-primary px-7" type="submit">Update</button>
            <button class="btn btn-error bg-primary px-7" type="submit"><a href="/lego/deleteSet/<%= set.set_num %>" >Delete</a></button>
            <br><br>
          </form>
    </div>
</body>
</html>